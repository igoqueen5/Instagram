<% @picts.each do |pict| %>
<div class="row">
  <h3><%= pict.user_id %></h3>
</div>
  <div class="field">
    <%= profile_img(pict.user) %>
  </div>
  <% end %>

<%= form_for(@pict) do |f| %>
  <%= f.label :comment %>
  <%= f.text_field :comment, class: 'form-control' %>
  <br>
 <%= f.submit'投稿',class: 'btn btn-primary btn-block' %>
  <%= link_to "フォト一覧画面にもどる", picts_path %>

<% end %>
